<div class="page-header">
    <h1>New tasklist</h1>
</div>

<% form_for(tasklist, {action: path_to.tasklists(), method: 'POST', id: "tasklist_form", class: 'form-horizontal'}, function (form) { %>
    <%- partial('tasklists/form.ejs', {locals: {form: form, tasklist: tasklist}}) %>
    <div class="form-actions">
        <%- form.submit('<i class="icon-ok icon-white"></i> Create tasklist', {class: 'btn btn-primary'}) %> or
        <%- link_to('Cancel', path_to.tasklists(), {class: 'btn'}) %>
    </div>
<% });%>
