<div class="page-header">
    <h1>Index of project</h1>
</div>

<div class="row">
    <div class="span12">
        <p><%- link_to('<i class="icon-plus icon-white"></i> New project', path_to.new_project(), {class: 'btn btn-primary'}) %></>
    </div>
</div>

<div class="row">
    <div class="span12">
        <% if (projects.length > 0) { %>
            <table class="table table-striped">
                <thead>
                    <tr class="row-fluid">
                        <th>Name</th>
                        <th>Permission</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% projects.forEach(function (project) { %>
                        <tr class="row-fluid">
                            <td ><%- link_to('<i class="icon-edit"></i> Edit', path_to.edit_project(project), {class: 'btn btn-mini'}) %> 
                            <strong class="offset0"><%- link_to(project.name, path_to.project(project)) %></strong></td>
                            <td><%= project.permission %></td>
                            <td>
                                
                                <%- link_to('<i class="icon-remove icon-white"></i> Delete', path_to.project(project), {class: 'btn btn-mini btn-danger', method: 'delete', remote: true, jsonp: '(function (u) {location.href = u;})'}) %>        
                            </td>
                        </tr>
                    <% }); %>        
                </tbody>
            </table>
        <% } else { %>
            <p class="alert alert-block alert-info">
                <strong>No projects were found.</strong> 
            </p>
        <% } %>
    </div>
</div>