<div class="page-header"><h1>Edit task</h1></div>

<% form_for(task, {action: path_to.project_task(project, task), method: 'PUT', id: "task_form", class: 'form-horizontal'}, function (form) { %>
<%- console.log(tasklist) %>
    <%- partial('tasks/form.ejs', {locals: {form: form, task: task, tasklistId: tasklist}}) %>
    <div class="form-actions">
        <%- form.submit('<i class="icon-ok icon-white"></i> Update task', {class: 'btn btn-primary'}) %> or
        <%- link_to('Cancel', path_to.project_tasklist(project, tasklist), {class: 'btn'}) %>
        
    </div>
<% });%>