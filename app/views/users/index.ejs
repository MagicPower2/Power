<div class="page-header">
    <h1>Index of user</h1>
</div>

<div class="row">
    <div class="span12">
        <p><%- link_to('<i class="icon-plus icon-white"></i> New user', path_to.new_user(), {class: 'btn btn-primary'}) %></>
    </div>
</div>

<div class="row">
    <div class="span12">
        <% if (users.length > 0) { %>
            <table class="table table-striped">
                <thead>
                    <tr class="row-fluid">
                        <th>UserName</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% users.forEach(function (user) { %>
                        <tr class="row-fluid">
                            <td><%- link_to('<i class="icon-edit"></i> Edit', path_to.edit_user(user), {class: 'btn btn-mini'}) %>
                            <strong class="offset0"><%- link_to(user.username, path_to.user(user)) %></strong></td>
                            <td>
                                
                                <%- link_to('<i class="icon-remove icon-white"></i> Delete', path_to.user(user), {class: 'btn btn-mini btn-danger', method: 'delete', remote: true, jsonp: '(function (u) {location.href = u;})'}) %>        
                            </td>
                        </tr>
                    <% }); %>        
                </tbody>
            </table>
        <% } else { %>
            <p class="alert alert-block alert-info">
                <strong>No users were found.</strong> 
            </p>
        <% } %>
    </div>
</div>